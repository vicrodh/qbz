// QBZ Slint POC - Main Application

import { VerticalBox, HorizontalBox, LineEdit, Button, Slider, ScrollView } from "std-widgets.slint";

// Theme colors matching QBZ dark theme
global Theme {
    out property <color> bg-primary: #0f0f0f;
    out property <color> bg-secondary: #1a1a1a;
    out property <color> bg-elevated: #252525;
    out property <color> bg-hover: #333333;
    out property <color> text-primary: #ffffff;
    out property <color> text-secondary: #b3b3b3;
    out property <color> accent-primary: #4285F4;
    out property <color> error: #ff4444;
}

// Album data structure
export struct AlbumData {
    id: string,
    title: string,
    artist: string,
    cover-url: string,
    hires: bool,
}

// Album card component
component AlbumCard inherits Rectangle {
    in property <string> title;
    in property <string> artist;
    in property <bool> hires: false;

    callback clicked();

    width: 160px;
    height: 220px;
    background: transparent;

    VerticalLayout {
        spacing: 8px;

        // Cover placeholder
        Rectangle {
            width: 160px;
            height: 160px;
            background: Theme.bg-secondary;
            border-radius: 8px;

            // Hi-Res badge
            if hires: Rectangle {
                x: 8px;
                y: 8px;
                width: 40px;
                height: 18px;
                background: #ff9500;
                border-radius: 4px;

                Text {
                    text: "Hi-Res";
                    color: white;
                    font-size: 10px;
                    font-weight: 600;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }
            }

            // Play overlay on hover
            Rectangle {
                width: 100%;
                height: 100%;
                background: touch.has-hover ? #00000066 : transparent;
                border-radius: 8px;

                if touch.has-hover: Text {
                    text: "â–¶";
                    color: white;
                    font-size: 32px;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }
            }

            touch := TouchArea {
                clicked => { root.clicked(); }
            }
        }

        // Title
        Text {
            text: title;
            color: Theme.text-primary;
            font-size: 13px;
            font-weight: 500;
            overflow: elide;
            max-width: 160px;
        }

        // Artist
        Text {
            text: artist;
            color: Theme.text-secondary;
            font-size: 12px;
            overflow: elide;
            max-width: 160px;
        }
    }
}

// Section header
component SectionHeader inherits Rectangle {
    in property <string> title;

    height: 40px;
    background: transparent;

    HorizontalLayout {
        padding-left: 4px;

        Text {
            text: title;
            color: Theme.text-primary;
            font-size: 22px;
            font-weight: 600;
            vertical-alignment: center;
        }
    }
}

export component App inherits Window {
    title: "QBZ";
    width: 1200px;
    height: 800px;
    background: Theme.bg-primary;

    // â”€â”€â”€ State Properties â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

    // View state (0=Login, 1=Home)
    in-out property <int> current-view: 0;
    in-out property <bool> is-logged-in: false;
    in-out property <bool> is-loading: false;

    // Login state
    in-out property <string> login-error: "";

    // User info
    in-out property <string> user-name: "";

    // Home data
    in-out property <[AlbumData]> new-releases: [];
    in-out property <[AlbumData]> editor-picks: [];

    // Playback state
    in-out property <bool> is-playing: false;
    in-out property <float> position: 0;
    in-out property <float> volume: 1.0;
    in-out property <string> position-text: "0:00";
    in-out property <string> duration-text: "0:00";

    // Current track
    in-out property <string> current-title: "";
    in-out property <string> current-artist: "";
    in-out property <string> current-album: "";

    // Queue state
    in-out property <int> queue-index: 0;
    in-out property <bool> shuffle: false;
    in-out property <int> repeat-mode: 0;

    // â”€â”€â”€ Callbacks â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

    callback login(string, string);
    callback load-home-data();
    callback play-album(string);
    callback play-pause();
    callback next();
    callback previous();
    callback seek(float);
    callback set-volume(float);

    // â”€â”€â”€ Layout â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

    VerticalLayout {
        // Main content area
        Rectangle {
            vertical-stretch: 1;
            background: Theme.bg-primary;

            // Login View
            if current-view == 0: Rectangle {
                background: Theme.bg-primary;

                VerticalBox {
                    alignment: center;
                    padding: 32px;
                    spacing: 16px;

                    Text {
                        text: "QBZ";
                        color: Theme.text-primary;
                        font-size: 48px;
                        font-weight: 700;
                        horizontal-alignment: center;
                    }

                    Text {
                        text: "Slint POC";
                        color: Theme.text-secondary;
                        font-size: 14px;
                        horizontal-alignment: center;
                    }

                    Rectangle { height: 24px; }

                    Rectangle {
                        width: 360px;
                        height: 320px;
                        background: Theme.bg-elevated;
                        border-radius: 12px;

                        VerticalBox {
                            padding: 24px;
                            spacing: 16px;

                            Text {
                                text: "Sign in to Qobuz";
                                color: Theme.text-primary;
                                font-size: 20px;
                                horizontal-alignment: center;
                            }

                            email-input := LineEdit {
                                placeholder-text: "Email";
                            }

                            password-input := LineEdit {
                                placeholder-text: "Password";
                                input-type: password;
                            }

                            if login-error != "": Text {
                                text: login-error;
                                color: Theme.error;
                                font-size: 13px;
                                horizontal-alignment: center;
                                wrap: word-wrap;
                            }

                            Button {
                                text: is-loading ? "Signing in..." : "Sign In";
                                enabled: !is-loading;
                                clicked => {
                                    root.login(email-input.text, password-input.text);
                                }
                            }
                        }
                    }
                }
            }

            // Home View
            if current-view == 1: Rectangle {
                background: Theme.bg-primary;

                ScrollView {
                    VerticalLayout {
                        padding: 32px;
                        spacing: 24px;

                        // Welcome header
                        Text {
                            text: "Welcome, " + user-name;
                            color: Theme.text-primary;
                            font-size: 28px;
                            font-weight: 600;
                        }

                        // Loading indicator
                        if is-loading: HorizontalLayout {
                            alignment: center;
                            Rectangle {
                                height: 100px;
                                Text {
                                    text: "Loading...";
                                    color: Theme.text-secondary;
                                    font-size: 16px;
                                    horizontal-alignment: center;
                                    vertical-alignment: center;
                                }
                            }
                        }

                        // New Releases section
                        if new-releases.length > 0: VerticalLayout {
                            spacing: 16px;

                            SectionHeader {
                                title: "New Releases";
                            }

                            ScrollView {
                                height: 240px;
                                viewport-width: new-releases.length * 176px;

                                HorizontalLayout {
                                    spacing: 16px;

                                    for album in new-releases: AlbumCard {
                                        title: album.title;
                                        artist: album.artist;
                                        hires: album.hires;
                                        clicked => { root.play-album(album.id); }
                                    }
                                }
                            }
                        }

                        // Editor's Picks section
                        if editor-picks.length > 0: VerticalLayout {
                            spacing: 16px;

                            SectionHeader {
                                title: "Editor's Picks";
                            }

                            ScrollView {
                                height: 240px;
                                viewport-width: editor-picks.length * 176px;

                                HorizontalLayout {
                                    spacing: 16px;

                                    for album in editor-picks: AlbumCard {
                                        title: album.title;
                                        artist: album.artist;
                                        hires: album.hires;
                                        clicked => { root.play-album(album.id); }
                                    }
                                }
                            }
                        }

                        // Empty state
                        if !is-loading && new-releases.length == 0 && editor-picks.length == 0: Rectangle {
                            height: 200px;

                            Text {
                                text: "No albums loaded yet";
                                color: Theme.text-secondary;
                                font-size: 16px;
                                horizontal-alignment: center;
                                vertical-alignment: center;
                            }
                        }
                    }
                }
            }
        }

        // Player Bar (only when logged in)
        if is-logged-in: Rectangle {
            height: 80px;
            background: Theme.bg-elevated;

            HorizontalLayout {
                padding: 16px;
                spacing: 16px;

                // Track info
                VerticalLayout {
                    width: 200px;
                    spacing: 4px;

                    Text {
                        text: current-title != "" ? current-title : "No track playing";
                        color: Theme.text-primary;
                        font-size: 14px;
                        overflow: elide;
                    }

                    Text {
                        text: current-artist;
                        color: Theme.text-secondary;
                        font-size: 12px;
                        overflow: elide;
                    }
                }

                // Playback controls
                VerticalLayout {
                    horizontal-stretch: 1;
                    spacing: 8px;

                    HorizontalLayout {
                        alignment: center;
                        spacing: 16px;

                        // Previous
                        Rectangle {
                            width: 32px;
                            height: 32px;

                            Text {
                                text: "â®";
                                color: Theme.text-primary;
                                font-size: 18px;
                                horizontal-alignment: center;
                                vertical-alignment: center;
                            }

                            TouchArea {
                                clicked => { root.previous(); }
                            }
                        }

                        // Play/Pause
                        Rectangle {
                            width: 40px;
                            height: 40px;
                            background: Theme.text-primary;
                            border-radius: 20px;

                            Text {
                                text: is-playing ? "â¸" : "â–¶";
                                color: Theme.bg-primary;
                                font-size: 18px;
                                horizontal-alignment: center;
                                vertical-alignment: center;
                            }

                            TouchArea {
                                clicked => { root.play-pause(); }
                            }
                        }

                        // Next
                        Rectangle {
                            width: 32px;
                            height: 32px;

                            Text {
                                text: "â­";
                                color: Theme.text-primary;
                                font-size: 18px;
                                horizontal-alignment: center;
                                vertical-alignment: center;
                            }

                            TouchArea {
                                clicked => { root.next(); }
                            }
                        }
                    }

                    // Progress bar
                    HorizontalLayout {
                        spacing: 8px;

                        Text {
                            text: position-text;
                            color: Theme.text-secondary;
                            font-size: 11px;
                            width: 40px;
                        }

                        Slider {
                            horizontal-stretch: 1;
                            minimum: 0;
                            maximum: 1;
                            value: position;
                            changed(val) => { root.seek(val); }
                        }

                        Text {
                            text: duration-text;
                            color: Theme.text-secondary;
                            font-size: 11px;
                            width: 40px;
                        }
                    }
                }

                // Volume
                HorizontalLayout {
                    width: 150px;
                    spacing: 8px;

                    Text {
                        text: "ðŸ”Š";
                        color: Theme.text-secondary;
                        font-size: 16px;
                        vertical-alignment: center;
                    }

                    Slider {
                        horizontal-stretch: 1;
                        minimum: 0;
                        maximum: 1;
                        value: volume;
                        changed(val) => { root.set-volume(val); }
                    }
                }
            }
        }
    }
}
