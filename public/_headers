# Cache hashed JS/CSS bundles for 1 year (immutable with hashed names)
/assets/*.js
  Cache-Control: public, max-age=31536000, immutable

/assets/*.css
  Cache-Control: public, max-age=31536000, immutable

# Cache images for 1 year
/assets/screenshots/*
  Cache-Control: public, max-age=31536000, immutable

/assets/icons/*
  Cache-Control: public, max-age=31536000, immutable

/assets/brand/*
  Cache-Control: public, max-age=31536000, immutable

# HTML pages - cache for 10 minutes with stale-while-revalidate
/*.html
  Cache-Control: public, max-age=600, stale-while-revalidate=3600

/
  Cache-Control: public, max-age=600, stale-while-revalidate=3600

/**/
  Cache-Control: public, max-age=600, stale-while-revalidate=3600

# Sitemap and robots - cache for 1 day
/sitemap.xml
  Cache-Control: public, max-age=86400

/robots.txt
  Cache-Control: public, max-age=86400
